    <script type="text/javascript">
        var KeyValue = GetQuery('KeyValue');
        var MemberNumber = GetQuery('MemberNumber');
        var MemberModels = GetQuery('MemberModel');

        $(function () {
            LoadProjectName();
            InitControl();
        })
        //得到一个对象实体
        function InitControl() {
            document.getElementById("MemberModel").value = MemberModels
            if (!!KeyValue) {
                AjaxJson("/SteelMember/ProjectManagement/SetDataForm", { KeyValue: KeyValue }, function (data) {
                    SetWebControls(data);
                    Data = data;
                })
                // } else {
                //    tipDialog('请选择文件夹!', 3); //,data.Code
                //}
                //(!!FolderId){
                //    tipDialog('请选择文件夹!', 3); //,data.Code
                //    ////显示顺序
                //    //AjaxJson("/SysManagement/Module/SortCode", {}, function (Data) {
                //    //    $("#SortCode").val(Data);
                //    //})
                //    $("#ParentID").val(GetQuery('FolderId'));
                //    //$("#IsPublic").val(GetQuery('IsPublic'));
            }
        }
        //保存事件
        function AcceptClick() {
            if (!CheckDataValid('#form2')) {
                return false;
            }
            Loading(true, "正在提交数据...");
            window.setTimeout(function () {
                var postData = GetWebControls("#form2");
                AjaxJson("/SteelMember/ProjectManagement/CreateProjectDemand?KeyValue=" + KeyValue, postData, function (data) {//+ '&ItemID=' + ItemID
                    tipDialog(data.Message, 3, data.Code);
                    top.frames[tabiframeId()].windowload();
                    closeDialog();
                });
            }, 200);
        };

        //载入项目名称
        function LoadProjectName() {
            $.ajax({
                url: '/SteelMember/ProjectManagement/GetProjectName',
                type: 'post',
                datatype: 'Json',
                data: {},
                success: function (data) {
                    if (data) {
                        var projectname_sel = [];
                        // projectname_sel.push('<option value="" selected>请选择</option>')
                        for (var i = 0, len = data.length; i < len; i++) {
                            var projectname = data[i];
                            projectname_sel.push('<option value="' + projectname.ProjectId + '">' + projectname.ProjectName + '</option>')
                        }
                        $("#ProjectId").html(projectname_sel.join(' '));
                        if (!!KeyValue) {
                            //编辑时获取值
                            $("#ProjectId  option[value='" + Data.ProjectId + "']").attr("selected", true);
                        }
                    }
                },
                error: function () {

                }
            });
        };

    </script>

    <link href="~/Scripts/jqueryPicture/css/jquery.iviewer.css" rel="stylesheet" />
