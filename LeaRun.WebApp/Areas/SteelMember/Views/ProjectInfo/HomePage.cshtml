@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<html class="html">

<head>
    <title>欢迎使用</title>
    <link href="~/Content/Scripts/jquery.easyui/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/Content/Scripts/jquery.easyui/themes/icon.css" rel="stylesheet" />
    <script src="~/Content/Scripts/jquery.easyui/easyui-1.4.5.min.js"></script>
    <script src="~/Content/Scripts/jquery.easyui/easyui-lang-zh_CN.js"></script>
    <script>
        $(function () {
            GetProject();
        })
        var Data;
        function GetProject() {
            AjaxJson("/SteelMember/ProjectInfo/SetDataForm", { KeyValue: 10 }, function (data) {
                Data = data;
                SetWebControls(data);

                filename = Data.ProjectBackground;
                filename = filename.substring(0, filename.lastIndexOf('.'));//获取文件名称，去除后缀名
                filename = "../../Resource/Document/NetworkDisk/System/Project/" + filename + "/" + Data.ProjectBackground;

                // document.getElementById("Description").value = Data.Description;

                document.getElementById("project_background").src = filename;
            });
        }
    </script>
</head>

<body>
    <div class="easyui-layout" style="width:100%;height:815px">
        @*<div data-options="region:'north'" style="height:50px"></div>*@
        <div data-options="region:'south',split:true" title="工程概况" style="height:20%;">
            <textarea id="Description" name="Description" maxlength="200" class="txtArea" rows="5" style="width:100%;height:100%"></textarea>
        </div>
        <div data-options="region:'west',split:true" title="工程属性" style="width:30%;height:80%">
            <div>
                <table class="form">
                    <tr>
                        <th class="formTitle">
                            项目地址：
                        </th>
                        <td class="formValue">
                            <input id="ProjectAddress" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr> <th class="formTitle"></th><th class="formTitle"></th></tr>
                    <tr>
                        <th class="formTitle">
                            业主单位：
                        </th>
                        <td class="formValue">
                            <input id="ConstructionUnit" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr>
                        <th class="formTitle">
                            负责人：
                        </th>
                        <td class="formValue">
                            <input id="ConstructionPrincipal" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr>
                        <th class="formTitle">
                            联系电话：
                        </th>
                        <td class="formValue">
                            <input id="ConstructionPrincipalTEL" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr><th class="formTitle"></th><th class="formTitle"></th></tr>
                    <tr>
                        <th class="formTitle">
                            设计单位：
                        </th>
                        <td class="formValue">
                            <input id="DesignUnit" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr>
                        <th class="formTitle">
                            负责人：
                        </th>
                        <td class="formValue">
                            <input id="DesignPrincipal" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr>
                        <th class="formTitle">
                            联系电话：
                        </th>
                        <td class="formValue">
                            <input id="DesignPrincipalTEL" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr><th class="formTitle"></th><th class="formTitle"></th></tr>
                    <tr>
                        <th class="formTitle">监理单位：</th>
                        <td class="formValue">
                            <input id="SupervisionUnit" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr>
                        <th class="formTitle">
                            负责人：
                        </th>
                        <td class="formValue">
                            <input id="SupervisionPrincipal" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr>
                        <th class="formTitle">
                            联系电话：
                        </th>
                        <td class="formValue">
                            <input id="SupervisionPrincipalTEL" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr><th class="formTitle"></th><th class="formTitle"></th></tr>
                    <tr>
                        <th class="formTitle">总承包商：</th>
                        <td class="formValue">
                            <input id="GeneralContractor" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr>
                        <th class="formTitle">
                            负责人：
                        </th>
                        <td class="formValue">
                            <input id="GeneralContractorPrincipal" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr>
                        <th class="formTitle">
                            联系电话：
                        </th>
                        <td class="formValue">
                            <input id="GeneralContractorPrincipalTEL" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr> <th class="formTitle"></th><th class="formTitle"></th></tr>
                    <tr>
                        <th class="formTitle">分包商：</th>
                        <td class="formValue">
                            <input id="ProfessionalContractor" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr>
                        <th class="formTitle">
                            负责人：
                        </th>
                        <td class="formValue">
                            <input id="ProfessionalContractorPrincipal" type="text" class="txt" />
                        </td>
                    </tr>
                    <tr>
                        <th class="formTitle">
                            联系电话：
                        </th>
                        <td class="formValue">
                            <input id="ProfessionalContractorPrincipalTEL" type="text" class="txt" />
                        </td>
                    </tr>
                </table>
            </div>

        </div>
        @*<div data-options="region:'east',split:true" title="East" style="width:40%;"></div>*@
        <div data-options="region:'center',title:'构件厂专栏'" style="width:70%;height:80%">
            <img id="project_background" src="" style="width:100%;height:100%" />
        </div>
    </div>
</body>
</html>