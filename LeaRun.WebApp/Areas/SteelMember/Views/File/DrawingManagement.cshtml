@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<title>图片放大缩小向左向右网页特效</title>*@
    <script src="~/Content/Scripts/jquery/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/jqueryPicture/js/jquery.mousewheel.min.js"></script>
    <script src="~/Scripts/jqueryPicture/js/jquery.iviewer.js"></script>
    <script src="~/Content/Scripts/learunui-framework.js"></script>

    <!--引入弹窗组件start-->
    @*<script src="~/Content/Scripts/lhgdialog/lhgdialog.min.js"></script>*@
    <!--引入弹窗组件end-->

    <script type="text/javascript">
        var $ = jQuery;
        $(document).ready(function () {
            var mole_fileURL = $("#model_file").val();
            var cad_fileURL = $("#cad_file").val();
            $("#viewer_cad").iviewer(
                 {
                     src: cad_fileURL,
                     update_on_resize: false,
                     initCallback: function () {
                         var object = this;
                         $("#in").click(function () { object.zoom_by(1); });
                         $("#out").click(function () { object.zoom_by(-1); });
                         $("#fit").click(function () { object.fit(); });
                         $("#orig").click(function () { object.set_zoom(100); });
                         $("#update").click(function () { object.update_container_info(); });
                     },
                     onMouseMove: function (object, coords) { },
                     onStartDrag: function (object, coords) { return false; }, //this image will not be dragged
                     onDrag: function (object, coords) { }
                 });

            $("#viewer_model").iviewer(
               {
                   src: mole_fileURL,
                   update_on_resize: false,
                   initCallback: function () {
                       var object = this;
                       $("#in").click(function () { object.zoom_by(1); });
                       $("#out").click(function () { object.zoom_by(-1); });
                       $("#fit").click(function () { object.fit(); });
                       $("#orig").click(function () { object.set_zoom(100); });
                       $("#update").click(function () { object.update_container_info(); });
                   },
                   onMouseMove: function (object, coords) { },
                   onStartDrag: function (object, coords) { return false; }, //this image will not be dragged
                   onDrag: function (object, coords) { }
               });
        });
        //删除模型图
        function btn_delModelDrawing(KeyValue) {
            var Prompt = "您确实要删除此文件吗？";
            var CAD = "";
            var Model = "Model";
            if (IsDelData(KeyValue)) {
                delConfirm('/SteelMember/File/DelDrawing', { KeyValue: KeyValue }, Prompt);
            }
        }

        //删除CAD图纸
        function btn_delCADDrawing(KeyValue) {
            var Prompt = "您确实要删除此文件吗？";
            var CAD = "CAD";
            var Model = "";
            if (IsDelData(KeyValue)) {
                delConfirm('/SteelMember/File/DelDrawing', { KeyValue: KeyValue, CAD: CAD }, Prompt);
            }
        }

        //上传模型图
        function btn_uploadModelDrawing(KeyValue) {
            var CAD = "";
            var Model = "Model";
            var url = "/SteelMember/File/UpLoadFile?KeyValue=" + KeyValue + "&CAD=" + CAD + "&Model=" + Model;
            Dialog(url, "UpLoadFile", "上传文件到网络硬盘", 500, 600, function (iframe) {
                top.frames[iframe].AcceptClick()
                $("#gridTable").trigger("reloadGrid"); //重新载入
            });
        }

        //上传CAD图纸
        function btn_uploadCADDrawing(KeyValue) {
            var CAD = "CAD";
            var Model = "";
            var url = "/SteelMember/File/UpLoadFile?KeyValue=" + KeyValue + "&CAD=" + CAD + "&Model=" + Model;
            Dialog(url, "UpLoadFile", "上传文件到网络硬盘", 500, 600, function (iframe) {
                top.frames[iframe].AcceptClick()
                $("#gridTable").trigger("reloadGrid"); //重新载入
            });
        }

    </script>
    <link href="~/Scripts/jqueryPicture/css/jquery.iviewer.css" rel="stylesheet" />
    <style>
        .viewer {
            width: 99%;
            height: 96%;
            border: 1px solid black;
            position: relative;
        }
    </style>
</head>
<body>
  
    <div style="width:100%;height:100%">
        <div style="float:left;width:50%;height:50%">
            <input type="hidden" id="cad_file" value='@ViewData["CADDrawing"]' />
            <div>图纸管理</div>
            <div id="viewer_cad" class="viewer"></div>
            <input type="button" onclick="btn_uploadCADDrawing(@ViewData["MemberId"])" value="修改/上传" style="margin-left:120px" />
            <input type="button" onclick="btn_delCADDrawing(@ViewData["MemberId"])" value="删除" style="margin-left:20px" />
        </div>
        <div style="float:left;width:50%;height:50%">
            <input type="hidden" id="model_file" value='@ViewData["ModelDrawing"]' />
            <div>
                模型管理
            </div>
            <div id="viewer_model" class="viewer"></div>
            <input type="button" onclick="btn_uploadModelDrawing(@ViewData["MemberId"])" value="修改/上传" style="margin-left:120px" />
            <input type="button" onclick="btn_delModelDrawing(@ViewData["MemberId"])" value="删除" style="margin-left:20px" />
        </div>
    </div>
</body>
</html>
